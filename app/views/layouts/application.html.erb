  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header> 
		<div class="col-xs-3">
			<div class="circle">
			<br/>
			Everything
			<br/>
